@model PoolOfBooks.Models.Books

@{
    ViewData["Title"] = "Edit";
}

<section class="login container">

    <h1 class="form-title">Редактирование книги</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="author" class="control-label"></label>
                <input asp-for="author" class="form-control" />
                <span asp-validation-for="author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cycle" class="control-label"></label>
                <input asp-for="cycle" class="form-control" />
                <span asp-validation-for="cycle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <textarea asp-for="description" class="form-control" cols="60" rows="60"></textarea>
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_category" class="control-label"></label>
                    <select asp-for="id_category" class="form-control" value="@Model.id_category" asp-items="ViewBag.id_category"></select>
            </div>
            <div class="form-group">
                <label asp-for="cover" class="control-label"></label>
                    <select asp-for="cover" value="@Model.cover" class="form-control" asp-items="ViewBag.cover"></select>

            </div>
            <div class="form-group">
                <label asp-for="pages" class="control-label"></label>
                <input asp-for="pages" class="form-control" type="number" maxlength="4" min="2" />
                <span asp-validation-for="pages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="in_stock" class="control-label"></label>
                <input asp-for="in_stock" class="form-control" type="number" />
                <span asp-validation-for="in_stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="price" class="control-label"></label>
                <input asp-for="price" class="form-control" type="number"/>
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="status" class="control-label"></label>
                <select asp-for="status" value="@Model.status" class="form-control" asp-items="ViewBag.status"></select>

            </div>
            <div class="form-group">
                <label asp-for="count_was_read" class="control-label"></label>
                <input asp-for="count_was_read" class="form-control" type="number" />
                <span asp-validation-for="count_was_read" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="buyPrice" class="control-label"></label>
                <input asp-for="buyPrice" class="form-control" type="number" />
                <span asp-validation-for="buyPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sellPrice" class="control-label"></label>
                    <input asp-for="sellPrice" class="form-control" type="number" />
                <span asp-validation-for="sellPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
