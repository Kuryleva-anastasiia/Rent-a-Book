    <section class="unreleased" id="sale">
      <div class="container">
        <div class="unreleased__wrap">
          <button
            class="button unreleased__button unreleased__button_next"
          ></button>
          <button
            class="button unreleased__button unreleased__button_prev"
          ></button>
          <h2 class="unreleased__title">Распродажа</h2>
            
          <div class="swiper unreleased__slider">
            <!-- Additional required wrapper -->
            <div class="swiper-wrapper unreleased__slider-wrap">
              <!-- Slides -->
                    @{
                        var sell = Model.Where(x => x.status == "продажа").ToList();
                    }

                    @for (int i = 0; i < 10; i++)
                    {
                        try
                        {
                            var books = sell.ElementAt(i);
                            <div class="swiper-slide unreleased-slide unreleased__slide">
                                <a href="~/Books/Details/@(books.id)">
                                <img src="~/img/books/@(books.id).jpg"
                                     alt="Book: @books.name"
                                     class="unreleased-slide__img" />
                                </a>
                            </div>
                            <!-- swiper-slide -->
                        }
                        catch (ArgumentOutOfRangeException ex)
                        {
                            break;

                        }

                    }
              
              
            </div>
            <!-- swiper-wrapper unreleased__slider-wrap -->
          </div>
          <!-- unreleased__slider -->
        </div>
        <!-- /.unreleased-wrap -->
