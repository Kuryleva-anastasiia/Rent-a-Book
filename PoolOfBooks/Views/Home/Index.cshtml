    <section class="subscribe">
      <div class="container">
        <div class="subscribe__wrap">
          <h2 class="subscribe__title">
            Будь первым, кто узнает о&nbsp;наших акциях
          </h2>
            <form action="/php/send.php" method="POST" class="subscribe__form form">
            <i class="subscribe__icon fas fa-envelope"></i>
            @{string a = "@";}
            <input
              type="email"
              class="subscribe__input"
              placeholder="Ваш Emaill"
              name="email"
              pattern="/^([a-z0-9_\.-])+@a+[a-z0-9-]+\.([a-z]{2,4}\.)?[a-z]{2,4}$/i"
              required
            />
            <button class="subscribe__btn" name="subscribe-btn">
              Регистрация
            </button>
          </form>
        </div>
        <!-- /.subscribe__wrap -->
