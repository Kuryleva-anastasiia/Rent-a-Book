@model IEnumerable<PoolOfBooks.Models.Books>

<section class="main">
      <div class="container">
        <div class="main-wrap">
          <div class="main-content">
            <h1 class="main-content__title">
              <span class="main-content__title main-content__title_bright"
                >Богатый папа,
                </span
              ><br />Бедный папа
            </h1>
            <span class="main-content__author">КНИГА Роберта Кийосаки</span>
            <!-- /.main-content__author -->
            <p class="main-content__description">
              Автор убежден, что в школе дети не получают нужных знаний о деньгах и потом всю жизнь работают ради денег, вместо того чтобы заставить деньги работать на себя.
            </p>
            <!-- /.main-content__description -->
            <button class="button main-content__btn main-content__btn_fill">
              КУПИТЬ СЕЙЧАС
            </button>
            <button
              class="button main-content__btn main-content__btn_transparent"
            >
              ЧИТАТЬ ДЕМО
            </button>
          </div>
          <!-- /.main-content -->
          <div class="main__img-wrap">
            <img
              src="~/img/books/106.jpg"
              alt="Book: Богатый папа, бедный папа"
              class="main__img"
            />
          </div>
          <!-- /.main__img -->
        </div>
        <!-- /.main-wrap -->
      </div>
      <!-- /.container -->
    </section>
    <section class="books-top">
      <a id="recs"></a>
      <div class="container">
        <div class="books-top__wrap">
          <div class="books-top__recs recs">
            <h2 class="books-top__title">Новинки</h2>
            <div class="recs__products products">
                    @{
                        var newest = Model.OrderByDescending(x => x.id);
                    }
                    @for(int i = 0; i < 6; i++)
                    {
                        <div class="products-card products__card">
                        <div class="products-card__wrap-img">
                            @{
                                var books = newest.ElementAt(i);

                                string btnStr = "";
                                if (books.status == "аренда")
                                {
                                    btnStr = "Хочу прочитать";
                                }
                                else
                                {
                                    btnStr = "Купить";
                                }
                            }
                                <a href="~/Books/Details/@(books.id)">
                          <img
                            src="~/img/books/@(books.id).jpg"
                                 alt="Book: @books.name"
                            class="products-card__img" />
                                </a>
                        </div>
                        <!-- /.products-card__wrap-img -->
                        <div class="products-card__content">
                          <h4 class="products-card__title">
                            @books.name
                          </h4>
                            <span class="products-card__collection">@books.Category.name</span>
                          <span class="products-card__price">@books.price &#8381;</span>
                          <div class="products-card__wrap-btn">
                             <a href="~/Books/Details/@books.id">
                            <button class="button products-card__btn">@btnStr</button>
                            </a>
                          </div>
                        </div>
                        <!-- /.products-card__content -->
                      </div>
                      <!-- /.products-card products__card -->
                    }
                    
            </div>
            <!-- /.recs__products products -->
            <a href="#" class="button recs__btn">Больше новинок</a>
          </div>
          <!-- .recs -->
          <div class="books-top__month-top month-top">
            <h2 class="books-top__title books-top__title_mb_3">Популярные</h2>
            <div class="month-top__wrap">
                    @{
                        var top = Model.OrderByDescending(x => x.count_was_read);
                    }
                    @for (int i = 0; i < 4; i++)
                    {
                        
                                var books = top.ElementAt(i);

                                string btnStr = "";
                                if (books.status == "аренда")
                                {
                                    btnStr = "Хочу прочитать";
                                }
                                else
                                {
                                    btnStr = "Купить";
                                }
                            
                        <div class="month-top-card month-top__card">
                            <div class="month-top-card__wrap-img">
                                <a href="~/Books/Details/@(books.id)">
                                <img src="~/img/books/@(books.id).jpg"
                                     alt="Book: @books.name"
                                     class="month-top-card__img" />
                                </a>
                            </div>
                            <!-- /.month-top-card__wrap-img -->
                            <div class="month-top-card__content">
                                <h4 class="month-top-card__title">
                                    @books.name
                                </h4>
                                <span class="month-top-card__price">@books.price &#8381;</span>
                                <div class="month-top-card__wrap-btn">
                                    <a href="~/Books/Details/@books.id">
                                    <button class="button month-top-card__btn">@btnStr</button>
                                    </a>
                                </div>
                            </div>
                            <!-- /.month-top-card__content -->
                        </div>
                        <!-- /.month-top-card month-top__card -->
                    }
              <a href="#" class="button month-top__btn">ЛУЧШИЕ КНИГИ</a>
            </div>
            <!-- /.month-top__wrap -->
          </div>
        </div>
      </div>
      <!-- /.container -->
    </section>
