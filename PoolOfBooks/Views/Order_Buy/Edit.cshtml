@model PoolOfBooks.Models.Order_Buy

@{
    ViewData["Title"] = "Edit";
}

<section class="login container">

    <h1 class="form-title">Редактирование заказа</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="id_client" class="control-label"></label>
                <select asp-for="id_client" class="form-control" asp-items="ViewBag.id_client"></select>
                <span asp-validation-for="id_client" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="date" class="control-label"></label>
                    <input asp-for="date" class="form-control" type="date" value="@Model.date.Date.ToString("dd.MM.yyyy")" />@Model.date.Date.ToString("dd.MM.yyyy")
                <span asp-validation-for="date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sum" class="control-label"></label>
                    <input asp-for="sum" class="form-control" type="number" />
                <span asp-validation-for="sum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="address" class="control-label"></label>
                <textarea asp-for="address" class="form-control"></textarea>
                <span asp-validation-for="address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="status" class="control-label"></label>
                    <select asp-for="status" class="form-control" asp-items="ViewBag.status"></select>
                <span asp-validation-for="status" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
   <a class="form-link" asp-action="Index">Вернуться</a>
</div>

</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
