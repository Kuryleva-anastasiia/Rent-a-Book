@model PoolOfBooks.Models.Order_Rent

@{
    ViewData["Title"] = "Create";
}

<section class="login container">

    <h1 class="form-title">Создание заказа (аренда)</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id_client" class="control-label"></label>
                <select asp-for="id_client" class ="form-control" asp-items="ViewBag.id_client"></select>
            </div>
            <div class="form-group">
                <label asp-for="date_begin" class="control-label"></label>
                <input asp-for="date_begin" class="form-control" type="date" />
                <span asp-validation-for="date_begin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="date_end" class="control-label"></label>
                <input asp-for="date_end" class="form-control" type="date" />
                <span asp-validation-for="date_end" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sum" class="control-label"></label>
                <input asp-for="sum" class="form-control" type="number"/>
                <span asp-validation-for="sum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="address" class="control-label"></label>
                <textarea asp-for="address" class="form-control"></textarea>
                <span asp-validation-for="address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="status" class="control-label"></label>
                <select asp-for="status" class="form-control" asp-items="ViewBag.status"></select>
                <span asp-validation-for="status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться</a>
</div>

</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
